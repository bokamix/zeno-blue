# ===========================================
# ZENO.blue Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# --- LLM Provider ---
# Options: "anthropic" or "openai"
MODEL_PROVIDER=anthropic

# --- OpenAI ---
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-5.2
OPENAI_CHEAP_MODEL=gpt-5-mini

# --- Anthropic ---
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_CHEAP_MODEL=claude-haiku-3-5-20241022

# --- ElevenLabs (for transcription skill) ---
ELEVENLABS_API_KEY=

# --- Serper (for web search) ---
SERPER_API_KEY=

# --- Agent Settings ---
AGENT_MAX_TOOL_CALLS=50
AGENT_MAX_STEPS=30
SUBTASK_MAX_STEPS=15
SKILL_TTL=300
REFLECTION_INTERVAL=5

# --- Context Management ---
CONTEXT_MAX_TOKENS=200000
CONTEXT_COMPRESSION_THRESHOLD=80000
CONTEXT_KEEP_RECENT=10

# --- Workers ---
NUM_WORKERS=4

# --- Scheduler ---
SCHEDULER_ENABLED=true
SCHEDULER_POLL_INTERVAL=60
NOTIFICATION_TTL_HOURS=24

# --- Google OAuth (optional) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# --- Logging ---
LOG_LEVEL=INFO

# --- Sentry Error Tracking ---
# Backend DSN (from sentry.io project settings)
SENTRY_DSN=
# Environment name (development, staging, production)
SENTRY_ENVIRONMENT=development
# Sample rate for performance monitoring (0.0 - 1.0)
SENTRY_TRACES_SAMPLE_RATE=0.1
# Frontend DSN (use VITE_ prefix for Vite)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development

LANGFUSE_PUBLIC_KEY=pk-xxx                                                                                                                                                                                                                                          
LANGFUSE_SECRET_KEY=sk-xxx                                                                                                                                                                                                                                          
LANGFUSE_HOST=https://cloud.langfuse.com  # optional  
LANGFUSE_TAGS=env:dev # change to prod
